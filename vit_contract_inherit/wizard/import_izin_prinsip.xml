<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard Form View untuk Import Izin Prinsip -->
        <record id="view_wizard_import_izin_prinsip_form" model="ir.ui.view">
            <field name="name">wizard.import.izin.prinsip.form</field>
            <field name="model">wizard.import.izin.prinsip</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Import Izin Prinsip dari Excel">
                    <group>
                        <field name="file_data" widget="binary" filename="file_name" string="Pilih File Excel"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button name="action_import_excel" type="object" string="Import" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action untuk membuka wizard -->
        <record id="action_import_izin_prinsip_wizard" model="ir.actions.act_window">
            <field name="name">Import Izin Prinsip</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.import.izin.prinsip</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


        <menuitem id="import_izin_prinsip_wizard" name="Import Izin Prinsip" parent="vit_contract.vit_contract_config_menu" action="action_import_izin_prinsip_wizard" sequence="1"/>
    </data>
</odoo>
