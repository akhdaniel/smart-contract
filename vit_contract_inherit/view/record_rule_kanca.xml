<odoo>
    <data noupdate="0">

        <record id="vit_kontrak_kanca_rule" model="ir.rule">
            <field name="name">Kontrak - Kanca Only</field>
            <field name="model_id" ref="vit_contract.model_vit_kontrak"/>
            <field name="groups" eval="[(4, ref('vit_contract_inherit.group_vit_contract_kanca'))]"/>
            <field name="domain_force">[('kanca_id', '=', user.kanca_id.id)]</field>
        </record>

        <record id="vit_termin_kanca_rule" model="ir.rule">
            <field name="name">Termin - Kanca Only</field>
            <field name="model_id" ref="vit_contract.model_vit_termin"/>
            <field name="groups" eval="[(4, ref('vit_contract_inherit.group_vit_contract_kanca'))]"/>
            <field name="domain_force">[('kontrak_id.kanca_id', '=', user.kanca_id.id)]</field>
        </record>

        <record id="vit_payment_kanca_rule" model="ir.rule">
            <field name="name">Payment - Kanca Only</field>
            <field name="model_id" ref="vit_contract.model_vit_payment"/>
            <field name="groups" eval="[(4, ref('vit_contract_inherit.group_vit_contract_kanca'))]"/>
            <field name="domain_force">[('termin_id.kontrak_id.kanca_id', '=', user.kanca_id.id)]</field>
        </record>

    </data>
</odoo>
