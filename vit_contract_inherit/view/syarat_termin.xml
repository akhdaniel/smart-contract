<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_vit_syarat_termin_form_inherit" model="ir.ui.view">
            <field name="name">vit.syarat_termin.form.inherit</field>
            <field name="model">vit.syarat_termin</field>
            <field name="inherit_id" ref="vit_contract.view_vit_syarat_termin_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='master_syarat_termin_id']" position="replace"/>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="master_syarat_termin_id"/>
                </xpath>

                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='document']" position="replace"/>

                <xpath expr="//form/sheet/group" position="inside">
                    <field name="document" widget="pdf_viewer" />
                </xpath>

                <xpath expr="//field[@name='termin_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='master_syarat_termin_id']" position="replace">
                    <field name="master_syarat_termin_id" groups="base.group_user,!vit_contract_inherit.group_vit_contract_vendor"/>

                    <field name="master_syarat_termin_id" readonly="1" groups="vit_contract_inherit.group_vit_contract_vendor"/>
                </xpath>



                <xpath expr="//field[@name='due_date']" position="replace">
                    <field name="due_date" groups="base.group_user,!vit_contract_inherit.group_vit_contract_vendor"/>

                    <field name="due_date" readonly="1" groups="vit_contract_inherit.group_vit_contract_vendor"/>
                </xpath>



                <xpath expr="//field[@name='verified']" position="replace">
                    <field name="verified" groups="base.group_user,!vit_contract_inherit.group_vit_contract_vendor"/>

                    <field name="verified" readonly="1" groups="vit_contract_inherit.group_vit_contract_vendor"/>
                </xpath>

            </field>
        </record>
                


        <record id="view_vit_syarat_termin_tree_inherit" model="ir.ui.view">
            <field name="name">view.vit.syarat.termin.tree.inherit</field>
            <field name="model">vit.syarat_termin</field>
            <field name="inherit_id" ref="vit_contract.view_vit_syarat_termin_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="replace"/>

                <xpath expr="//field[@name='master_syarat_termin_id']" position="replace"/>

                <xpath expr="//field[@name='termin_id']" position="before">
                    <field name="master_syarat_termin_id"/>
                </xpath>

            </field>
        </record>
                

