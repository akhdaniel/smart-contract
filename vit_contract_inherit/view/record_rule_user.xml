<odoo>
    <data noupdate="0">

        <record id="vit_kontrak_user_rule" model="ir.rule">
            <field name="name">Kontrak - User Only</field>
            <field name="model_id" ref="vit_contract.model_vit_kontrak"/>
            <field name="groups" eval="[(4, ref('vit_contract.group_vit_contract_user'))]"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
        </record>

        <record id="vit_termin_user_rule" model="ir.rule">
            <field name="name">Termin - User Only</field>
            <field name="model_id" ref="vit_contract.model_vit_termin"/>
            <field name="groups" eval="[(4, ref('vit_contract.group_vit_contract_user'))]"/>
            <field name="domain_force">[('kontrak_id.partner_id', '=', user.partner_id.id)]</field>
        </record>

        <record id="vit_payment_user_rule" model="ir.rule">
            <field name="name">Payment - User Only</field>
            <field name="model_id" ref="vit_contract.model_vit_payment"/>
            <field name="groups" eval="[(4, ref('vit_contract.group_vit_contract_user'))]"/>
            <field name="domain_force">[('termin_id.kontrak_id.partner_id', '=', user.partner_id.id)]</field>
        </record>

    </data>
</odoo>