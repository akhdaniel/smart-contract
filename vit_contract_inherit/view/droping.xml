<odoo>
  <data>
    <record id="view_vit_droping_form_inherit" model="ir.ui.view">
      <field name="name">vit.droping.form.inherit</field>
      <field name="model">vit.droping</field>
      <field name="inherit_id" ref="vit_contract.view_vit_droping_form"/>
      <field name="arch" type="xml">
      
        <xpath expr="//header/button[@name='action_confirm']" position="attributes">
          <attribute name="groups">vit_contract.group_vit_contract_user,vit_contract.group_vit_contract_manager,vit_contract_inherit.group_vit_contract_kanwil,vit_contract_inherit.group_vit_contract_kanca,vit_contract_inherit.group_vit_contract_pusat_keuangan</attribute>
          <!-- <attribute name="invisible">stage_is_draft==False</attribute> -->
        </xpath>

        <!-- Tombol untuk Kanwil Umum -->
        <!-- <xpath expr="//header/button[@name='action_confirm']" position="attributes">
            <attribute name="groups">vit_contract_inherit.group_vit_contract_kanwil_umum</attribute>
            <attribute name="invisible">stage_is_draft==False or stage_is_done==True</attribute>
        </xpath> -->

        <!-- Tombol untuk Kanwil Keuangan -->
        <!-- <xpath expr="//header/button[@name='action_confirm']" position="attributes">
            <attribute name="groups">vit_contract_inherit.group_vit_contract_kanwil_keuangan</attribute>
            <attribute name="invisible">stage_is_draft == True</attribute>
        </xpath> -->








        <xpath expr="//field[@name='jumlah']" position="attributes">
          <attribute name="readonly">1</attribute>
        </xpath>

        <xpath expr="//field[@name='date']" position="attributes">
          <attribute name="readonly">1</attribute>
          <attribute name="invisible">1</attribute>
        </xpath>

        <xpath expr="//field[@name='droping_date']" position="attributes">
          <attribute name="readonly">1</attribute>
        </xpath>
        

        <xpath expr="//page[@name='termin_kontrak_ids']" position="after">
          <page name="attachments_page" string="Attachments">
            <field name="attachments" widget="many2many_binary_preview"/>
          </page>
        </xpath>

      </field>
    </record>
  </data>
</odoo>
