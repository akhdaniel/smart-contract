<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_vit_payment_tree_inherit" model="ir.ui.view">
            <field name="name">view.vit.payment.tree.inherit</field>
            <field name="model">vit.payment</field>
            <field name="inherit_id" ref="vit_contract.view_vit_payment_tree"/>
            <field name="arch" type="xml">


                <xpath expr="//tree/field[@name='kanwil_id']" position="replace"/>
                <xpath expr="//tree/field[@name='master_budget_id']" position="replace"/>
                <xpath expr="//tree/field[@name='budget_rkap_id']" position="after">
                    <field name="kanwil_id"/>
                    <field name="master_budget_id"/>
                </xpath>

                <xpath expr="//tree/field[@name='amount']" position="replace"/>

                <xpath expr="//tree/field[@name='termin_id']" position="after">
                    <field name="amount"/>
                </xpath>

            </field>
        </record>


        <record id="view_vit_payment_form_inherit" model="ir.ui.view">
            <field name="name">view.vit.payment.form.inherit</field>
            <field name="model">vit.payment</field>
            <field name="inherit_id" ref="vit_contract.view_vit_payment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_id']" position="replace"/>
                <xpath expr="//field[@name='termin_id']" position="replace"/>
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="partner_id"/>
                    <field name="termin_id"/>
                </xpath>

                <xpath expr="//field[@name='amount']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='budget_rkap_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='termin_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='kanwil_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='master_budget_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='payment_date']" position="after">
                    <field name="attachments" widget="many2many_binary_preview" string="Attachments"/>
                </xpath>

            </field>
        </record>
