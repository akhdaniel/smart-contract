<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_vit_payment_tree_inherit" model="ir.ui.view">
            <field name="name">view.vit.payment.tree.inherit</field>
            <field name="model">vit.payment</field>
            <field name="inherit_id" ref="vit_contract.view_vit_payment_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//tree/field[@name='kanwil_id']" position="replace"/>
                <xpath expr="//tree/field[@name='master_budget_id']" position="replace"/>
                <xpath expr="//tree/field[@name='master_nama_termin_id']" position="replace"/>
                <xpath expr="//tree/field[@name='persentase']" position="replace"/>
                <xpath expr="//tree/field[@name='amount']" position="replace"/>
                <xpath expr="//tree/field[@name='amount_budget_rkap']" position="replace"/>
                <xpath expr="//tree/field[@name='amount_izin_prinsip']" position="replace"/>
                <xpath expr="//tree/field[@name='amount_kontrak']" position="replace"/>
                <xpath expr="//tree/field[@name='amount_denda']" position="replace"/>
                <xpath expr="//tree/field[@name='budget_rkap_id']" position="after">
                    <field name="kanwil_id"/>
                    <field name="master_budget_id"/>
                    <field name="master_nama_termin_id"/>
                    <field name="persentase"/>
                    <field name="amount"/>
                    <field name="amount_budget_rkap"/>
                    <field name="amount_izin_prinsip"/>
                    <field name="amount_kontrak"/>
                    <field name="amount_denda"/>
                </xpath>
            </field>
        </record>


        <record id="view_vit_payment_form_inherit" model="ir.ui.view">
            <field name="name">view.vit.payment.form.inherit</field>
            <field name="model">vit.payment</field>
            <field name="inherit_id" ref="vit_contract.view_vit_payment_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter"
                        options="{'display_log_button': False, 'display_log_note_button': False, 'display_activity_button': False}">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </xpath>

                <xpath expr="//header/button[@name='action_confirm']" position="attributes">
                    <attribute name="groups">vit_contract.group_vit_contract_user,vit_contract.group_vit_contract_manager</attribute>
                </xpath>

                <xpath expr="//header/button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">vit_contract.group_vit_contract_user,vit_contract.group_vit_contract_manager</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_budget_rkap']" position="replace"/>
                <xpath expr="//field[@name='amount_izin_prinsip']" position="replace"/>
                <xpath expr="//field[@name='amount_kontrak']" position="replace"/>
                <xpath expr="//field[@name='amount_denda']" position="replace"/>
                <xpath expr="//field[@name='persentase']" position="replace"/>
                <xpath expr="//field[@name='syarat_progress']" position="replace"/>
                <xpath expr="//field[@name='actual_progress']" position="replace"/>
                <xpath expr="//field[@name='syarat_output']" position="replace"/>
                <xpath expr="//field[@name='actual_output']" position="replace"/>
                <xpath expr="//field[@name='partner_id']" position="replace"/>
                <xpath expr="//field[@name='termin_id']" position="replace"/>
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="amount_budget_rkap" readonly="1"/>
                    <field name="amount_izin_prinsip" readonly="1"/>
                    <field name="amount_kontrak" readonly="1"/>
                    <field name="amount_denda" readonly="1"/>
                    <field name="persentase" readonly="1"/>
                    <field name="syarat_progress" readonly="1"/>
                    <field name="actual_progress" readonly="1"/>
                    <field name="syarat_output" readonly="1"/>
                    <field name="actual_output" readonly="1"/>
                    <field name="partner_id" readonly="1"/>
                    <field name="termin_id" readonly="1"/>
                </xpath>

                <xpath expr="//field[@name='amount']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='budget_rkap_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='termin_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='kanwil_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='master_budget_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='izin_prinsip_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='kontrak_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='master_nama_termin_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='request_date']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='payment_date']" position="after">
                    <field name="attachments" widget="many2many_binary_preview" string="Attachments"/>
                </xpath>

            </field>
        </record>
