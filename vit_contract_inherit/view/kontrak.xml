<odoo>
    <data>
        <record id="view_vit_kontrak_form_inherit" model="ir.ui.view">
            <field name="name">vit.kontrak.form.inherit</field>
            <field name="model">vit.kontrak</field>
            <field name="inherit_id" ref="vit_contract.view_vit_kontrak_form"/>
            <field name="arch" type="xml">

                <sheet position="before">

                    <field name="is_late_upload" invisible="1"/>
                    <field name="late_termin_names" invisible="1"/>

                    <div class="alert alert-warning o_form_label"
                        invisible="not is_late_upload">
                        âš  Data ini ada keterlambatan pada:
                        <field name="late_termin_names" nolabel="1" readonly="1"/>
                        , maka akan dikenakan denda.
                    </div>

                </sheet>

                <xpath expr="//field[@name='izin_prinsip_id']" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_izin_prinsip']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>

                <xpath expr="//field[@name='budget_rkap_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='kanwil_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='master_budget_id']" position="replace"/>
                <xpath expr="//field[@name='kanwil_id']" position="after">
                    <field name="master_budget_id"/>
                </xpath>

                <xpath expr="//field[@name='master_budget_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='jenis_kontrak_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//page[@name='termin_ids']//tree/field[@name='master_nama_termin_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//page[@name='termin_ids']//tree/field[@name='deskripsi']" position="replace"/>
                <xpath expr="//page[@name='termin_ids']//tree/field[@name='master_nama_termin_id']" position="after">
                    <field name="deskripsi"/>
                </xpath>

                <xpath expr="//page[@name='termin_ids']//tree/field[@name='partner_id']" position="replace"/>

                <xpath expr="//page[@name='termin_ids']//tree/field[@name='persentase']" position="replace"/>
                <xpath expr="//page[@name='termin_ids']//tree/field[@name='nilai']" position="replace"/>
                <xpath expr="//page[@name='termin_ids']//tree/field[@name='stage_id']" position="after">
                    <field name="persentase"/>
                    <field name="nilai"/>
                </xpath>


                <xpath expr="//field[@name='termin_ids']" position="attributes">
                    <attribute name="readonly">stage_is_draft==True or stage_is_done==True</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>


            </field>
        </record>



