<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_vit_kontrak_form_inherit" model="ir.ui.view">
            <field name="name">vit.kontrak.form.inherit</field>
            <field name="model">vit.kontrak</field>
            <field name="inherit_id" ref="vit_contract.view_vit_kontrak_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header/button[@name='action_confirm']" position="attributes">
                    <attribute name="groups">vit_contract.group_vit_contract_user,vit_contract.group_vit_contract_manager</attribute>
                </xpath>

                <xpath expr="//header/button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">vit_contract.group_vit_contract_user,vit_contract.group_vit_contract_manager</attribute>
                </xpath>


                <xpath expr="//button[@name='action_create_addendum']" position="attributes">
                    <attribute name="invisible">stage_is_draft==True or stage_is_done==True</attribute>
                </xpath>

                <xpath expr="//form/sheet" position="before">
                    <field name="is_addendum" invisible="1"/>
                </xpath>


                <sheet position="before">
                    <field name="is_late_upload" invisible="1"/>
                    <field name="late_termin_names" invisible="1"/>
                    <div class="alert alert-warning o_form_label"
                        invisible="not is_late_upload">
                        âš  Data ini ada keterlambatan pada:
                        <field name="late_termin_names" nolabel="1" readonly="1"/>
                        , maka akan dikenakan denda.
                    </div>
                </sheet>

                <!-- <xpath expr="//div[@class='oe_button_box']" position="inside">
                    <button name="action_view_addendums" type="object"
                        class="oe_stat_button float-end" icon="fa-edit">
                        <field name="addendum_count" widget="statinfo" string="Addendum"/>
                    </button>
                </xpath> -->

                <xpath expr="//div[@class='oe_button_box']" position="after">
                <div class="oe_stat_icon float-end"
                    invisible="not addendum_count"
                    style="border:1px solid purple; border-radius:6px; padding:2px 8px; display:inline-flex; align-items:center; gap:6px; margin-left:8px;">
                    <button name="action_view_addendums" type="object"
                            style="background:none; border:none; padding:0; margin:0; display:inline-flex; align-items:center; gap:4px;">
                        <i class="fa fa-edit" style="font-size:18px;"/>
                        <span style="font-size:14px;">
                            <field name="addendum_count"/> Addendum
                        </span>
                    </button>
                </div>

                <div class="oe_stat_icon float-end"
                    invisible="not is_addendum"
                    style="border:1px solid green; border-radius:6px; padding:2px 8px; display:inline-flex; align-items:center; gap:6px; margin-left:8px;">
                    <button name="action_view_origin_kontrak" type="object"
                            style="background:none; border:none; padding:0; margin:0; display:inline-flex; align-items:center; gap:4px;">
                        <i class="fa fa-link" style="font-size:18px;"/>
                        <span style="font-size:14px;">
                            Kontrak Asal
                        </span>
                    </button>
                </div>
            </xpath>











                <xpath expr="//field[@name='start_date']" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//field[@name='end_date']" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="required">1</attribute>
                </xpath>


                <xpath expr="//field[@name='izin_prinsip_id']" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_izin_prinsip']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>

                <xpath expr="//field[@name='budget_rkap_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='kanwil_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='kanca_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='master_budget_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>


                <xpath expr="//field[@name='job_izin_prinsip_id']" position="replace"/>
                <xpath expr="//field[@name='jenis_kontrak_id']" position="replace"/>
                <xpath expr="//field[@name='partner_id']" position="replace"/>
                <xpath expr="//field[@name='izin_prinsip_id']" position="after">
                    <field name="job_izin_prinsip_id"  readonly="stage_is_draft==False"/>
                    <field name="jenis_kontrak_many" invisible="1"/>
                    <field name="jenis_kontrak_id"  readonly="stage_is_draft==False"/>
                    <field name="partner_id"  readonly="stage_is_draft==False"/>
                </xpath>

                <xpath expr="//field[@name='job_izin_prinsip_id']" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//field[@name='jenis_kontrak_id']" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="required">1</attribute>
                </xpath>



                <xpath expr="//field[@name='budget_rkap_id']" position="replace"/>
                <xpath expr="//field[@name='master_budget_id']" position="replace"/>
                <xpath expr="//field[@name='kanwil_id']" position="replace"/>
                <xpath expr="//field[@name='kanca_id']" position="replace"/>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="budget_rkap_id"/>
                    <field name="master_budget_id"/>
                    <field name="kanwil_id"/>
                    <field name="kanca_id"/>
                </xpath>


                <xpath expr="//page[@name='termin_ids']//tree/field[@name='master_nama_termin_id']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//page[@name='termin_ids']//tree/field[@name='deskripsi']" position="replace"/>
                <xpath expr="//page[@name='termin_ids']//tree/field[@name='master_nama_termin_id']" position="after">
                    <field name="deskripsi"/>
                </xpath>

                <xpath expr="//page[@name='termin_ids']//tree/field[@name='partner_id']" position="replace"/>

                <xpath expr="//page[@name='termin_ids']//tree/field[@name='persentase']" position="replace"/>
                <xpath expr="//page[@name='termin_ids']//tree/field[@name='nilai']" position="replace"/>
                <xpath expr="//page[@name='termin_ids']//tree/field[@name='stage_id']" position="after">
                    <field name="persentase"/>
                    <field name="nilai"/>
                </xpath>


                <xpath expr="//field[@name='termin_ids']" position="attributes">
                    <attribute name="readonly">stage_is_draft==True or stage_is_done==True</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>




                <xpath expr="//page[@name='termin_ids']/field[@name='termin_ids']/tree" position="attributes">
                    <attribute name="delete">false</attribute>
                </xpath>


                <xpath expr="//field[@name='termin_ids']/tree/field[@name='is_droping_done']" position="after">
                    <field name="stage_is_draft" column_invisible="1"/>
                    <button name="action_delete_line"
                            string="Delete"
                            type="object"
                            icon="fa-trash"
                            class="oe_link"
                            invisible="not stage_is_draft"/>
                </xpath>




                <xpath expr="//page[@name='payment_ids']" position="replace"/>

                <xpath expr="//page[@name='termin_ids']" position="after">
                    <page name="payment_ids" string="Payment">
                        <field name="payment_ids" readonly="stage_is_draft==False">
                            <tree>
                                <field name="name"/>
                                <field name="payment_date"/>
                                <field name="termin_id"/>
                                <field name="amount"/>
                            </tree>
                        </field>
                    </page>


                    <page name="attachments_tab" string="Attachments">
                        <field name="attachments" widget="many2many_binary_preview" string="Attachments"/>
                    </page>
                </xpath>






                <xpath expr="//field[@name='start_date']" position="attributes">
                    <attribute name="readonly">is_addendum==True or stage_is_draft==False</attribute>
                </xpath>
                <xpath expr="//field[@name='amount_denda']" position="attributes">
                    <attribute name="readonly">is_addendum==True or stage_is_draft==False</attribute>
                </xpath>
                <xpath expr="//field[@name='persentasi_denda']" position="attributes">
                    <attribute name="readonly">is_addendum==True or stage_is_draft==False</attribute>
                </xpath>
                <xpath expr="//field[@name='overdue_days']" position="attributes">
                    <attribute name="readonly">is_addendum==True or stage_is_draft==False</attribute>
                </xpath>
                <xpath expr="//field[@name='izin_prinsip_id']" position="attributes">
                    <attribute name="readonly">is_addendum==True or stage_is_draft==False</attribute>
                </xpath>
                <xpath expr="//field[@name='job_izin_prinsip_id']" position="attributes">
                    <attribute name="readonly">is_addendum==True or stage_is_draft==False</attribute>
                </xpath>
                <xpath expr="//field[@name='jenis_kontrak_id']" position="attributes">
                    <attribute name="readonly">is_addendum==True or stage_is_draft==False</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="readonly">is_addendum==True or stage_is_draft==False</attribute>
                </xpath>


            </field>
        </record>



