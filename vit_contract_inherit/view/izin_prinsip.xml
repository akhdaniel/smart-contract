<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_vit_izin_prinsip_form_inherit" model="ir.ui.view">
            <field name="name">view.vit.izin.prinsip.form.inherit</field>
            <field name="model">vit.izin_prinsip</field>
            <field name="inherit_id" ref="vit_contract.view_vit_izin_prinsip_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='total_pagu']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>


                <xpath expr="//field[@name='total_pagu']" position="after">
                    <field name="attachments" widget="many2many_binary_preview" string="Attachments"/>
                </xpath>

                <!-- <xpath expr="//field[@name='droping_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath> -->
            

            
                <xpath expr="//field[@name='kontrak_ids']/tree/field[@name='jenis_kontrak_id']" position="replace"/>

                <xpath expr="//field[@name='izin_prinsip_line_ids']/tree/field[@name='pagu']" position="replace"/>

              
                <xpath expr="//field[@name='izin_prinsip_line_ids']/tree/field[@name='kanwil_id']" position="after">
                    <field name="pagu"/>
                </xpath>


                <xpath expr="//field[@name='kontrak_ids']/tree/field[@name='amount_izin_prinsip']" position="attributes">
                    <attribute name="force_save">1</attribute>
                </xpath>

                <xpath expr="//field[@name='master_budget_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>

                <xpath expr="//field[@name='kanwil_id']" position="attributes">
                    <attribute name="force_save">1</attribute>
                </xpath>


                <xpath expr="//page[@name='izin_prinsip_line_ids']" position="replace"/>

                <xpath expr="//page[@name='kontrak_ids']" position="before">
                    <page name="izin_prinsip_line_ids" string="Izin Prinsip Line">
                        <field name="izin_prinsip_line_ids" readonly="stage_is_draft==False">
                            <tree>
                                <field name="jenis_kontrak_id"/>
                                <field name="kanwil_id"/>
                                <field name="kanca_id"/>
                                <field name="pagu"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

