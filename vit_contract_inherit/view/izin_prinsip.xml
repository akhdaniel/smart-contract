<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_vit_izin_prinsip_form_inherit" model="ir.ui.view">
            <field name="name">view.vit.izin.prinsip.form.inherit</field>
            <field name="model">vit.izin_prinsip</field>
            <field name="inherit_id" ref="vit_contract.view_vit_izin_prinsip_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='total_payment']" position="after">
                    <field name="created_by" readonly="1" invisible="1"/>
                    <field name="is_addendum" invisible="1"/>
                    <field
                        name="allowed_kanca_id"
                        readonly="1"
                        invisible="not allowed_kanca_id"
                    />
                </xpath>
                        <!-- groups="vit_contract_inherit.group_vit_contract_kanca" -->


                <xpath expr="//button[@name='action_reload_view']" position="before">
                    <button string="Revisi" type="object" name="action_create_addendum" 
                            invisible="stage_is_done==True" icon="fa-plus"/>
                </xpath>


                <xpath expr="//div[@class='oe_button_box']" position="after">
                    <div class="oe_stat_icon float-end"
                        invisible="not addendum_count and not is_addendum"
                        style="border:1px solid purple; border-radius:6px; padding:2px 8px; display:inline-flex; align-items:center; gap:6px; margin-left:8px;">
                        <button name="action_view_addendums" type="object"
                                style="background:none; border:none; padding:0; margin:0; display:inline-flex; align-items:center; gap:4px;">
                            <i class="fa fa-edit" style="font-size:18px;"/>
                            <span style="font-size:14px;">
                                <field name="addendum_count"/> Addendum
                            </span>
                        </button>
                    </div>
                </xpath>

                
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="required">1</attribute>
                    <attribute name="readonly">stage_is_draft==False</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_budget']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='amount_budget_remaining']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                
                <xpath expr="//field[@name='total_pagu']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//field[@name='total_payment']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <!-- <xpath expr="//field[@name='kontrak_ids']/tree/field[@name='amount_izin_prinsip']" position="attributes">
                    <attribute name="force_save">1</attribute>
                </xpath> -->

                <xpath expr="//field[@name='master_budget_id']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="force_save">1</attribute>
                </xpath>

                <xpath expr="//field[@name='kanwil_id']" position="attributes">
                    <attribute name="force_save">1</attribute>
                </xpath>


                <xpath expr="//page[@name='job_izin_prinsip_ids']" position="replace"/>
                <xpath expr="//page[@name='kontrak_ids']" position="before">
                    <page name="job_izin_prinsip_ids" string="Detail Kegiatan">
                        <field name="job_izin_prinsip_ids" readonly="stage_is_draft==False">
                            <tree>
                                <field name="kanca_id"/>
                                <field name="name" string="Uraian Pekerjaan"/>
                                <field name="total_pagu_job" string="Jumlah Pagu"/>
                            </tree>
                        </field>
                    </page>
                </xpath>


                <xpath expr="//page[@name='kontrak_ids']" position="after">
                    <page name="attachments_tab" string="Attachments">
                        <field name="attachments" widget="many2many_binary_preview" string="Upload"/>
                    </page>
                </xpath>


            </field>
        </record>

