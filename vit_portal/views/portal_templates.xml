<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Portal Home: Add Contracts Card -->
    <template id="portal_my_home_contract" name="Show Contracts in My Account" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="after">
            <div class="row mt-4">
                <div class="col-12 col-lg-6">
                     <div class="card text-center">
                        <div class="card-header">
                            <h5 class="card-title">My Contracts</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">You have <t t-esc="contract_count"/> contracts.</p>
                            <a href="/my/contracts" class="btn btn-primary">View Contracts</a>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <!-- Contracts List Page -->
    <template id="portal_my_contracts">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('/my', 'Home'), ('/my/contracts', 'Contracts')]"/>
            
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Contracts</t>
            </t>
            
            <t t-if="not contracts"> 
                <div class="alert alert-info" role="alert">
                    There are currently no contracts for your account.
                </div>
            </t>
            <t t-if="contracts" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Contract Number</th>
                        <th class="text-left">Budget Name</th>
                        <th class="text-right">Start Date</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="contracts" t-as="contract">
                        <tr>
                            <td><a t-attf-href="/my/contracts/{{ contract.id }}"><t t-esc="contract.name"/></a></td>
                            <td class="text-left"><t t-esc="contract.izin_prinsip_id.master_budget_id.name"/></td>
                            <td class="text-right"><span t-field="contract.start_date"/></td>
                        </tr>
                    </t>
                </tbody>
            </t>
        </t>
    </template>

    <!-- Contract Detail Page -->
    <template id="portal_contract_detail">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs" t-value="[('/my', 'Home'), ('/my/contracts', 'Contracts'), (contract.name, '/my/contracts/' + str(contract.id))]"/>

            <div class="container">
                <div class="card">
                    <div class="card-header">
                        <h3>Contract Details</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Contract Number:</strong> <t t-esc="contract.name"/></p>
                        <p><strong>Budget Name:</strong> <t t-esc="contract.izin_prinsip_id.master_budget_id.name"/></p>
                        <p><strong>Start Date:</strong> <span t-field="contract.start_date"/></p>
                        <p><strong>End Date:</strong> <span t-field="contract.end_date"/></p>
                    </div>
                </div>

                <h3 class="mt-4">Document Requirements</h3>
                <div id="termin_accordion">
                    <t t-foreach="contract.termin_ids" t-as="termin">
                        <div class="card mb-2">
                            <div class="card-header" t-attf-id="heading{{termin.id}}">
                                <h5 class="mb-0">
                                    <button class="btn btn-link" data-toggle="collapse" t-attf-data-target="#collapse{{termin.id}}" aria-expanded="true" t-attf-aria-controls="collapse{{termin.id}}">
                                        <t t-esc="termin.name"/>
                                    </button>
                                </h5>
                            </div>

                            <div t-attf-id="collapse{{termin.id}}" class="collapse show" t-attf-aria-labelledby="heading{{termin.id}}" data-parent="#termin_accordion">
                                <div class="card-body">
                                    <ul class="list-group list-group-flush">
                                        <t t-foreach="termin.syarat_termin_ids" t-as="syarat">
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <div>
                                                    <t t-esc="syarat.name"/>
                                                    <t t-if="syarat.document">
                                                        <a t-attf-href="/web/content/vit.syarat_termin/{{syarat.id}}/document?download=true" t-att-title="syarat.name" class="ml-2">
                                                            <i class="fa fa-fw fa-download"></i> View Uploaded File
                                                        </a>
                                                    </t>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <t t-if="syarat.document">
                                                        <span class="badge badge-success mr-3">Completed</span>
                                                    </t>
                                                    <t t-else="">
                                                        <span class="badge badge-warning mr-3">Pending</span>
                                                        <form action="/my/contracts/syarat/upload" method="post" enctype="multipart/form-data" class="form-inline">
                                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                                            <input type="hidden" name="syarat_id" t-att-value="syarat.id"/>
                                                            <div class="custom-file mr-2">
                                                                <input type="file" name="attachment" class="custom-file-input" t-attf-id="attachment_{{syarat.id}}" required="1"/>
                                                                <label class="custom-file-label" t-attf-for="attachment_{{syarat.id}}">Choose file...</label>
                                                            </div>
                                                            <button type="submit" class="btn btn-primary">Upload</button>
                                                        </form>
                                                    </t>
                                                </div>
                                            </li>
                                        </t>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </div>

                <h3 class="mt-4">Payment Requests</h3>
                <t t-if="contract.payment_ids">
                    <table class="table table-sm mt-3">
                        <thead>
                            <tr>
                                <th>Number</th>
                                <th>Date</th>
                                <th class="text-right">Amount</th>
                                <th class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="contract.payment_ids" t-as="payment">
                                <tr>
                                    <td><t t-esc="payment.name"/></td>
                                    <td><span t-field="payment.tanggal"/></td>
                                    <td class="text-right"><span t-field="payment.amount" t-options='{"widget": "monetary", "display_currency": contract.currency_id}'/></td>
                                    <td class="text-center"><span class="badge badge-info" t-esc="payment.state"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
                <t t-else="">
                     <div class="alert alert-info" role="alert">
                        There are no payment requests for this contract yet.
                    </div>
                </t>
            </div>
        </t>
    </template>

    

</odoo>
