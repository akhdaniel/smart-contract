<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="vit_dashboard.NumberCard" owl="1">
        <div t-on-click="openRecord"
           t-att-class="'p-3 text-center text-white shadow d-flex align-items-center cursor-pointer ' + (props.bgColor || 'bg-primary')"
           t-att-style="'border-radius: 5px; transition: box-shadow 0.3s ease;'"
           onmouseover="this.classList.add('shadow-lg')"
           onmouseout="this.classList.remove('shadow-lg')">
            <!-- Icon Section -->
            <div class="me-3 w-25 text-center">
                <i t-att-class="props.icon || 'fa fa-info-circle'" t-att-style="'font-size: 2rem;'"></i>
            </div>
            <!-- Text Section -->
            <div class="flex-grow-1 w-75">
                <div class="row">
                    <div class="col">
                        <div class="row">
                            <div class="col">



                                <div class="fs-5 fw-bold">
                                    <t t-out="props.title"/>
                                </div>

                                <t t-if="'kanwil_name' in state.val">
                                    <div class="fs-2 fw-bold text-white">
                                        <t t-out="state.val.kanwil_name"/>
                                    </div>
                                </t>



                                
                            </div>
                        </div>
                        <t t-if="props.title == 'Kanwil'">
                            <div class="row">
                                <div class="col">
                                    <div class="fs-2 fw-bold">
                                        <t t-out="state.val.persentasi || 0"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                        <t t-if="'amount' in state.val">
                            <div class="d-flex justify-content-between">
                                <div class="fs-5 fw-bold">Amount Budget</div>
                                <div class="fs-5 fw-bold"><t t-out="state.val.amount || 0"/></div>
                            </div>
                        </t>
                        <t t-if="'total_realisasi' in state.val">
                            <div class="d-flex justify-content-between">
                                <div class="fs-5 fw-bold">Total Realisasi</div>
                                <div class="fs-5 fw-bold"><t t-out="state.val.total_realisasi || 0"/></div>
                            </div>
                        </t>

                        <t t-if="props.title != 'Kanwil' and 'master_summaries' in state.val">
                            <t t-set="current" t-value="state.val.master_summaries.find(ms => ms.master_budget == props.title)"/>
                            <t t-if="current">
                                <div>
                                    <div class="d-flex justify-content-between"><span>Sisa</span><span><t t-out="current.remaining"/></span></div>
                                    <div class="d-flex justify-content-between"><span>Total Qty Izin Prinsip</span><span><t t-out="current.total_qty_izin_prinsip"/></span></div>
                                    <div class="d-flex justify-content-between"><span>Total Pagu Izin Prinsip</span><span><t t-out="current.total_pagu_izin_prinsip"/></span></div>
                                    <div class="d-flex justify-content-between"><span>Total Qty Kontrak</span><span><t t-out="current.total_qty_kontrak"/></span></div>
                                    <div class="d-flex justify-content-between"><span>Total Amount Kontrak</span><span><t t-out="current.total_amount_kontrak"/></span></div>
                                    <div class="d-flex justify-content-between"><span>Total Amount Droping</span><span><t t-out="current.total_amount_droping"/></span></div>

                                    <div class="d-flex justify-content-around mt-2">
                                        <div class="badge bg-primary text-white p-2 d-flex flex-column align-items-center" style="min-width: 120px;">
                                            <div class="fs-4 fw-bold">
                                                <t t-out="current.persen_kontrak.toFixed(2)"/>%
                                            </div>
                                            <small>% TL Paket</small>
                                        </div>
                                        <div class="badge bg-warning text-dark p-2 d-flex flex-column align-items-center" style="min-width: 120px;">
                                            <div class="fs-4 fw-bold">
                                                <t t-out="current.persen_droping.toFixed(2)"/>%
                                            </div>
                                            <small>% Dropping/Relok</small>
                                        </div>
                                    </div>

                                </div>
                            </t>
                        </t>



                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
