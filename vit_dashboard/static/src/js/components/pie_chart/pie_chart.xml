<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="vit_dashboard.PieChart" owl="1">
        <div 
            t-att-class="'p-3 shadow bg-white position-relative'" 
            t-att-style="'border-radius: 5px; border: 1px solid #ddd;'">
            <div class="fs-5 fw-bold mb-3 hover-underline cursor-pointer" t-on-click="openRecord">
                <t t-esc="props.title"/>
            </div>
            <!-- Expand Icon -->
            <i class="fa fa-expand position-absolute" 
               title="Perbesar Grafik" 
               t-on-click.stop="openModal"
               style="top: 10px; right: 10px; cursor: pointer; color: #6c757d; transition: color 0.3s ease;" />
            
            <div t-att-class="'h-100 ' + props.class" t-ref="root">
                <div class="h-100 position-relative" t-ref="container">
                    <canvas t-ref="canvas" />
                </div>
            </div>

            <!-- Modal -->
            <t t-if="state.showModal">
                <div class="modal d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);">
                    <div class="modal-dialog modal-xl modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title"><t t-esc="props.title" /></h5>
                                <button type="button" class="btn-close" t-on-click="closeModal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <canvas t-ref="modalCanvas" style="width:100%; height:400px;"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </div>
    </t>
</templates>