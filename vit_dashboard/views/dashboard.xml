<odoo>
    <data>

        <!-- Tambah menu Dashboard di bawah Vit Contract -->
        <menuitem id="vit_contract_dashboard_menu"
                  name="Dashboard"
                  parent="vit_contract.vit_contract_top_menu"
                  groups="vit_contract.group_vit_contract_manager,vit_contract_inherit.group_vit_contract_kanwil,vit_contract_inherit.group_vit_contract_kanca,vit_contract_inherit.group_vit_contract_pusat_keuangan,vit_contract_inherit.group_vit_contract_kanwil_keuangan,vit_contract_inherit.group_vit_contract_pusat_umum"
                  sequence="30"/>

        <!-- Actions -->
        <record id="action_kerma_dashboard" model="ir.actions.client">
            <field name="name">Kerma Dashboard</field>
            <field name="tag">vit_dashboard.KermaDashboard</field>
        </record>

        <record id="action_sarlog_dashboard" model="ir.actions.client">
            <field name="name">Sarlog Dashboard</field>
            <field name="tag">vit_dashboard.SarlogDashboard</field>
        </record>

        <!-- Child Menus di bawah Dashboard -->
        <menuitem id="menu_kerma_dashboard"
                  name="Dashboard Kanwil"
                  action="action_kerma_dashboard"
                  parent="vit_contract_dashboard_menu"
                  sequence="1"/>

        <menuitem id="menu_sarlog_dashboard"
                  name="Dashboard Sarlog"
                  action="action_sarlog_dashboard"
                  parent="vit_contract_dashboard_menu"
                  sequence="2"/>

    </data>
</odoo>


