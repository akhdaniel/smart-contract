<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_master_budget_tree" model="ir.ui.view">
            <field name="name">vit_master_budget_tree</field>
            <field name="model">vit.master_budget</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Master Budget">
                    <field name="sequence"  widget='handle'/>
                    <field name="name" /> <!-- 100-->
                    <field name="jenis_penugasan" /> <!-- 101-->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_master_budget_form" model="ir.ui.view">
            <field name="name">vit_master_budget_form</field>
            <field name="model">vit.master_budget</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Master Budget">
                    <header>
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Master Budget Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="jenis_penugasan"  />
                                <field name="sequence"  />
                            </group>
                            <group> <!-- right -->
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_master_budget_search" model="ir.ui.view">
            <field name="name">vit_master_budget</field>
            <field name="model">vit.master_budget</field>
            <field name="arch" type="xml">
                <search string="Master Budget">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Jenis Penugasan" name="filter_by_jenis_penugasan" domain="[('jenis_penugasan','=','')]" />
                    <filter string="Sequence" name="filter_by_sequence" domain="[('sequence','=','')]" />
                    <field name="name" select="True"/>
                    <field name="jenis_penugasan" select="True"/>
                    <field name="sequence" select="True"/>
                    <group string="Group By..">
                        <filter string="Jenis Penugasan" domain="[]" name="group_by_jenis_penugasan" context="{'group_by':'jenis_penugasan'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_master_budget_kanban" model="ir.ui.view" >
            <field name="name">vit_master_budget</field>
            <field name="model">vit.master_budget</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </div> <!--oe_kanban_details-->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- action window -->
        <record id="action_master_budget" model="ir.actions.act_window">
            <field name="name">Master Budget</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.master_budget</field>
            <field name="view_mode">tree,form,kanban,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Master Budget
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_master_budget" name="Master Budget" parent="vit_contract_config_menu" action="action_master_budget" sequence="170"/>
    </data>
</odoo>