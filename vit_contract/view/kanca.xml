<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_kanca_tree" model="ir.ui.view">
            <field name="name">vit_kanca_tree</field>
            <field name="model">vit.kanca</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Kanca">
                    <field name="name" /> <!-- 100-->
                    <field name="kanwil_id" /> <!-- 100-->
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_kanca_pivot" model="ir.ui.view">
            <field name="name">vit_kanca_tree</field>
            <field name="model">vit.kanca</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Kanca">
                    <field name="kanwil_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_kanca_form" model="ir.ui.view">
            <field name="name">vit_kanca_form</field>
            <field name="model">vit.kanca</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kanca">
                    <header>
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Kanca Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                            </group>
                            <group> <!-- right -->
                                <field name="kanwil_id"  />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_kanca_search" model="ir.ui.view">
            <field name="name">vit_kanca</field>
            <field name="model">vit.kanca</field>
            <field name="arch" type="xml">
                <search string="Kanca">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <field name="kanwil_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Kanwil" domain="[]" name="group_by_kanwil_id" context="{'group_by':'kanwil_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_kanca_kanban" model="ir.ui.view" >
            <field name="name">vit_kanca</field>
            <field name="model">vit.kanca</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </div> <!--oe_kanban_details-->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_kanca_graph" model="ir.ui.view">
            <field name="name">vit_kanca</field>
            <field name="model">vit.kanca</field>
            <field name="arch" type="xml">
                <graph string="Kanca" type="bar">
                    <field name="kanwil_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_kanca" model="ir.actions.act_window">
            <field name="name">Kanca</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.kanca</field>
            <field name="view_mode">tree,form,kanban,pivot,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Kanca
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_kanca" name="Kanca" parent="vit_contract_config_menu" action="action_kanca" sequence="210"/>
    </data>
</odoo>