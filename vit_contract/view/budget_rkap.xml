<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_budget_rkap_tree" model="ir.ui.view">
            <field name="name">vit_budget_rkap_tree</field>
            <field name="model">vit.budget_rkap</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Budget Rkap">
                    <field name="name" /> <!-- 10-->
                    <field name="amount" /> <!-- 20-->
                    <field name="remaining" /> <!-- 40-->
                    <field name="total_pagu_izin_prinsip" /> <!-- 50-->
                    <field name="total_qty_izin_prinsip" /> <!-- 60-->
                    <field name="total_amount_kontrak" /> <!-- 70-->
                    <field name="total_qty_kontrak" /> <!-- 80-->
                    <field name="total_amount_payment" /> <!-- 90-->
                    <field name="total_amount_droping" /> <!-- 100-->
                    <field name="previous_remaining" /> <!-- 110-->
                    <field name="stage_id" /> <!-- 2000-->
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_budget_rkap_pivot" model="ir.ui.view">
            <field name="name">vit_budget_rkap_tree</field>
            <field name="model">vit.budget_rkap</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Budget Rkap">
                    <field name="master_budget_id" type="row"/>
                    <field name="stage_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_budget_rkap_form" model="ir.ui.view">
            <field name="name">vit_budget_rkap_form</field>
            <field name="model">vit.budget_rkap</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Budget Rkap">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" invisible="allow_confirm==False" class="oe_highlight" icon="fa-check-circle" />
                        <button string="Cancel" type="object" name="action_cancel" invisible="allow_cancel==False" icon="fa-times-circle"/>
                        <field name="stage_id" widget="statusbar" options="{'fold_field':'fold'}" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Budget Rkap Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="stage_is_draft" invisible="True" />
                                <field name="stage_is_done" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="allow_confirm" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="allow_cancel" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="stage_name" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="amount"  readonly="stage_is_draft==False"/>
                                <field name="remaining"  readonly="stage_is_draft==False"/>
                                <field name="total_pagu_izin_prinsip"  readonly="stage_is_draft==False"/>
                                <field name="total_qty_izin_prinsip"  readonly="stage_is_draft==False"/>
                                <field name="total_amount_kontrak"  readonly="stage_is_draft==False"/>
                                <field name="total_qty_kontrak"  readonly="stage_is_draft==False"/>
                                <field name="total_amount_payment"  readonly="stage_is_draft==False"/>
                                <field name="total_qty_termin"  readonly="stage_is_draft==False"/>
                                <field name="total_amount_droping"  readonly="stage_is_draft==False"/>
                                <field name="budget_date"  readonly="stage_is_draft==False"/>
                                <field name="previous_remaining"  readonly="stage_is_draft==False"/>
                            </group>
                            <group> <!-- right -->
                                <field name="master_budget_id"  readonly="stage_is_draft==False"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="izin_prinsip_ids" string="Izin Prinsip">
                                <field name="izin_prinsip_ids" readonly="stage_is_draft==False">
                                    <tree >
                                        <field name="name" /> <!-- 10-->
                                        <field name="kanwil_id" /> <!-- 30-->
                                        <field name="total_pagu" /> <!-- 500-->
                                        <field name="total_payment" /> <!-- 510-->
                                        <field name="stage_id" /> <!-- 2000-->
                                    </tree>
                                </field>
                            </page>
                            <page name="kontrak_ids" string="Kontrak">
                                <field name="kontrak_ids" readonly="stage_is_draft==False">
                                    <tree >
                                        <field name="name" /> <!-- 10-->
                                        <field name="job_izin_prinsip_id" /> <!-- 40-->
                                        <field name="kanca_id" /> <!-- 60-->
                                        <field name="start_date" /> <!-- 70-->
                                        <field name="end_date" /> <!-- 80-->
                                        <field name="jenis_kontrak_id" /> <!-- 100-->
                                        <field name="partner_id" /> <!-- 102-->
                                        <field name="amount_kontrak" /> <!-- 200-->
                                        <field name="stage_id" /> <!-- 1000-->
                                    </tree>
                                </field>
                            </page>
                            <page name="payment_ids" string="Payment">
                                <field name="payment_ids" readonly="stage_is_draft==False">
                                    <tree >
                                        <field name="name" /> <!-- 10-->
                                        <field name="kanwil_id" /> <!-- 40-->
                                        <field name="master_nama_termin_id" /> <!-- 50-->
                                        <field name="request_date" /> <!-- 60-->
                                        <field name="payment_date" /> <!-- 70-->
                                        <field name="termin_id" /> <!-- 80-->
                                        <field name="persentase" /> <!-- 480-->
                                        <field name="amount" /> <!-- 490-->
                                        <field name="amount_kontrak" /> <!-- 500-->
                                        <field name="stage_id" /> <!-- 2000-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_budget_rkap_search" model="ir.ui.view">
            <field name="name">vit_budget_rkap</field>
            <field name="model">vit.budget_rkap</field>
            <field name="arch" type="xml">
                <search string="Budget Rkap">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Amount" name="filter_by_amount" domain="[('amount','=','')]" />
                    <filter string="Remaining" name="filter_by_remaining" domain="[('remaining','=','')]" />
                    <filter string="Total Pagu Izin Prinsip" name="filter_by_total_pagu_izin_prinsip" domain="[('total_pagu_izin_prinsip','=','')]" />
                    <filter string="Total Amount Kontrak" name="filter_by_total_amount_kontrak" domain="[('total_amount_kontrak','=','')]" />
                    <filter string="Total Amount Payment" name="filter_by_total_amount_payment" domain="[('total_amount_payment','=','')]" />
                    <filter string="Total Qty Izin Prinsip" name="filter_by_total_qty_izin_prinsip" domain="[('total_qty_izin_prinsip','=','')]" />
                    <filter string="Total Qty Kontrak" name="filter_by_total_qty_kontrak" domain="[('total_qty_kontrak','=','')]" />
                    <filter string="Total Qty Termin" name="filter_by_total_qty_termin" domain="[('total_qty_termin','=','')]" />
                    <filter string="Total Amount Droping" name="filter_by_total_amount_droping" domain="[('total_amount_droping','=','')]" />
                    <filter string="Budget Date" name="filter_by_budget_date" domain="[('budget_date','=','')]" />
                    <filter string="Previous Remaining" name="filter_by_previous_remaining" domain="[('previous_remaining','=','')]" />
                    <filter string="Stage Is Draft" name="filter_by_stage_is_draft" domain="[('stage_is_draft','=','')]" />
                    <filter string="Stage Is Done" name="filter_by_stage_is_done" domain="[('stage_is_done','=','')]" />
                    <filter string="Allow Confirm" name="filter_by_allow_confirm" domain="[('allow_confirm','=','')]" />
                    <filter string="Allow Cancel" name="filter_by_allow_cancel" domain="[('allow_cancel','=','')]" />
                    <filter string="Stage Name" name="filter_by_stage_name" domain="[('stage_name','=','')]" />
                    <field name="name" select="True"/>
                    <field name="amount" select="True"/>
                    <field name="remaining" select="True"/>
                    <field name="total_pagu_izin_prinsip" select="True"/>
                    <field name="total_amount_kontrak" select="True"/>
                    <field name="total_amount_payment" select="True"/>
                    <field name="total_qty_izin_prinsip" select="True"/>
                    <field name="total_qty_kontrak" select="True"/>
                    <field name="total_qty_termin" select="True"/>
                    <field name="total_amount_droping" select="True"/>
                    <field name="budget_date" select="True"/>
                    <field name="previous_remaining" select="True"/>
                    <field name="stage_is_draft" select="True"/>
                    <field name="stage_is_done" select="True"/>
                    <field name="allow_confirm" select="True"/>
                    <field name="allow_cancel" select="True"/>
                    <field name="stage_name" select="True"/>
                    <field name="master_budget_id" select="True"/>
                    <field name="stage_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Master Budget" domain="[]" name="group_by_master_budget_id" context="{'group_by':'master_budget_id'}"/>
                        <filter string="Stage" domain="[]" name="group_by_stage_id" context="{'group_by':'stage_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_budget_rkap_kanban" model="ir.ui.view" >
            <field name="name">vit_budget_rkap</field>
            <field name="model">vit.budget_rkap</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                                <span class="text-muted">Budget Date</span> <field name="budget_date"></field>
                            </div> <!--oe_kanban_details-->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_budget_rkap_cal" model="ir.ui.view">
            <field name="name">vit_budget_rkap_cal</field>
            <field name="model">vit.budget_rkap</field>
            <field name="arch" type="xml">
                <calendar string="Budget Rkap" date_start="budget_date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_budget_rkap_graph" model="ir.ui.view">
            <field name="name">vit_budget_rkap</field>
            <field name="model">vit.budget_rkap</field>
            <field name="arch" type="xml">
                <graph string="Budget Rkap" type="bar">
                    <field name="master_budget_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_budget_rkap" model="ir.actions.act_window">
            <field name="name">Budget Rkap</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.budget_rkap</field>
            <field name="view_mode">tree,form,kanban,pivot,calendar,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Budget Rkap
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_budget_rkap" name="Budget Rkap" parent="vit_contract_sub_menu" action="action_budget_rkap" sequence="30"/>
    </data>
</odoo>