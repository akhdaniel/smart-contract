<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_kontrak_tree" model="ir.ui.view">
            <field name="name">vit_kontrak_tree</field>
            <field name="model">vit.kontrak</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Kontrak">
                    <field name="name" /> <!-- 100-->
                    <field name="izin_prinsip_id" /> <!-- 100-->
                    <field name="start_date" /> <!-- 101-->
                    <field name="budget_rkap_id" /> <!-- 101-->
                    <field name="end_date" /> <!-- 102-->
                    <field name="stage_id" /> <!-- 102-->
                    <field name="amount_izin_prinsip" /> <!-- 103-->
                    <field name="jenis_kontrak_id" /> <!-- 103-->
                    <field name="amount_kontrak" /> <!-- 104-->
                    <field name="master_budget_id" /> <!-- 104-->
                    <field name="amount_denda" /> <!-- 105-->
                    <field name="kanca_id" /> <!-- 105-->
                    <field name="persentasi_denda" /> <!-- 106-->
                    <field name="kanwil_id" /> <!-- 106-->
                    <field name="overdue_days" /> <!-- 107-->
                    <field name="partner_id" /> <!-- 107-->
                    <field name="job_izin_prinsip_id" /> <!-- 108-->
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_kontrak_pivot" model="ir.ui.view">
            <field name="name">vit_kontrak_tree</field>
            <field name="model">vit.kontrak</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Kontrak">
                    <field name="izin_prinsip_id" type="row"/>
                    <field name="budget_rkap_id" type="row"/>
                    <field name="stage_id" type="row"/>
                    <field name="jenis_kontrak_id" type="row"/>
                    <field name="master_budget_id" type="row"/>
                    <field name="kanca_id" type="row"/>
                    <field name="kanwil_id" type="row"/>
                    <field name="partner_id" type="row"/>
                    <field name="job_izin_prinsip_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_kontrak_form" model="ir.ui.view">
            <field name="name">vit_kontrak_form</field>
            <field name="model">vit.kontrak</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kontrak">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" invisible="allow_confirm==False" class="oe_highlight" icon="fa-check-circle" />
                        <button string="Cancel" type="object" name="action_cancel" invisible="allow_cancel==False" icon="fa-times-circle"/>
                        <field name="stage_id" widget="statusbar" options="{'fold_field':'fold'}" />
                        <button string="Create Addendum" type="object" name="action_create_addendum" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Kontrak Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="stage_is_draft" invisible="True" />
                                <field name="stage_is_done" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="allow_confirm" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="allow_cancel" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="stage_name" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="start_date"  readonly="stage_is_draft==False"/>
                                <field name="end_date"  readonly="stage_is_draft==False"/>
                                <field name="amount_izin_prinsip"  readonly="stage_is_draft==False"/>
                                <field name="amount_kontrak"  readonly="stage_is_draft==False"/>
                                <field name="amount_denda"  readonly="stage_is_draft==False"/>
                                <field name="persentasi_denda"  readonly="stage_is_draft==False"/>
                                <field name="overdue_days"  readonly="stage_is_draft==False"/>
                            </group>
                            <group> <!-- right -->
                                <field name="izin_prinsip_id"  readonly="stage_is_draft==False"/>
                                <field name="budget_rkap_id"  readonly="stage_is_draft==False"/>
                                <field name="jenis_kontrak_id"  readonly="stage_is_draft==False"/>
                                <field name="master_budget_id"  readonly="stage_is_draft==False"/>
                                <field name="kanca_id"  readonly="stage_is_draft==False"/>
                                <field name="kanwil_id"  readonly="stage_is_draft==False"/>
                                <field name="partner_id"  readonly="stage_is_draft==False"/>
                                <field name="job_izin_prinsip_id"  readonly="stage_is_draft==False"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="payment_ids" string="Payment">
                                <field name="payment_ids" readonly="stage_is_draft==False">
                                    <tree >
                                        <field name="name" /> <!-- 100-->
                                        <field name="amount" /> <!-- 101-->
                                        <field name="request_date" /> <!-- 102-->
                                        <field name="stage_id" /> <!-- 102-->
                                        <field name="payment_date" /> <!-- 103-->
                                        <field name="termin_id" /> <!-- 103-->
                                        <field name="amount_denda" /> <!-- 104-->
                                        <field name="master_budget_id" /> <!-- 104-->
                                        <field name="amount_budget_rkap" /> <!-- 105-->
                                        <field name="kanwil_id" /> <!-- 105-->
                                        <field name="amount_izin_prinsip" /> <!-- 106-->
                                        <field name="amount_kontrak" /> <!-- 107-->
                                        <field name="stage_id" /> <!-- 107-->
                                        <field name="syarat_progress" /> <!-- 108-->
                                        <field name="master_nama_termin_id" /> <!-- 108-->
                                        <field name="actual_progress" /> <!-- 109-->
                                        <field name="izin_prinsip_id" /> <!-- 109-->
                                        <field name="syarat_output" /> <!-- 110-->
                                        <field name="actual_output" /> <!-- 111-->
                                        <field name="persentase" /> <!-- 112-->
                                    </tree>
                                </field>
                            </page>
                            <page name="termin_ids" string="Termin">
                                <field name="termin_ids" readonly="stage_is_draft==False">
                                    <tree >
                                        <field name="name" /> <!-- 100-->
                                        <field name="nilai" /> <!-- 101-->
                                        <field name="master_nama_termin_id" /> <!-- 101-->
                                        <field name="persentase" /> <!-- 102-->
                                        <field name="stage_id" /> <!-- 102-->
                                        <field name="deskripsi" /> <!-- 103-->
                                        <field name="droping_id" /> <!-- 103-->
                                        <field name="due_date" /> <!-- 104-->
                                        <field name="partner_id" /> <!-- 104-->
                                        <field name="verification_date" /> <!-- 105-->
                                        <field name="is_droping_done" /> <!-- 106-->
                                        <field name="syarat_progress" /> <!-- 107-->
                                        <field name="actual_progress" /> <!-- 108-->
                                        <field name="syarat_output" /> <!-- 109-->
                                        <field name="actual_output" /> <!-- 110-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_kontrak_search" model="ir.ui.view">
            <field name="name">vit_kontrak</field>
            <field name="model">vit.kontrak</field>
            <field name="arch" type="xml">
                <search string="Kontrak">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Start Date" name="filter_by_start_date" domain="[('start_date','=','')]" />
                    <filter string="End Date" name="filter_by_end_date" domain="[('end_date','=','')]" />
                    <filter string="Stage Is Draft" name="filter_by_stage_is_draft" domain="[('stage_is_draft','=','')]" />
                    <filter string="Stage Is Done" name="filter_by_stage_is_done" domain="[('stage_is_done','=','')]" />
                    <filter string="Allow Confirm" name="filter_by_allow_confirm" domain="[('allow_confirm','=','')]" />
                    <filter string="Allow Cancel" name="filter_by_allow_cancel" domain="[('allow_cancel','=','')]" />
                    <filter string="Stage Name" name="filter_by_stage_name" domain="[('stage_name','=','')]" />
                    <filter string="Amount Izin Prinsip" name="filter_by_amount_izin_prinsip" domain="[('amount_izin_prinsip','=','')]" />
                    <filter string="Amount Kontrak" name="filter_by_amount_kontrak" domain="[('amount_kontrak','=','')]" />
                    <filter string="Amount Denda" name="filter_by_amount_denda" domain="[('amount_denda','=','')]" />
                    <filter string="Persentasi Denda" name="filter_by_persentasi_denda" domain="[('persentasi_denda','=','')]" />
                    <filter string="Overdue Days" name="filter_by_overdue_days" domain="[('overdue_days','=','')]" />
                    <field name="name" select="True"/>
                    <field name="start_date" select="True"/>
                    <field name="end_date" select="True"/>
                    <field name="stage_is_draft" select="True"/>
                    <field name="stage_is_done" select="True"/>
                    <field name="allow_confirm" select="True"/>
                    <field name="allow_cancel" select="True"/>
                    <field name="stage_name" select="True"/>
                    <field name="amount_izin_prinsip" select="True"/>
                    <field name="amount_kontrak" select="True"/>
                    <field name="amount_denda" select="True"/>
                    <field name="persentasi_denda" select="True"/>
                    <field name="overdue_days" select="True"/>
                    <field name="izin_prinsip_id" select="True"/>
                    <field name="budget_rkap_id" select="True"/>
                    <field name="stage_id" select="True"/>
                    <field name="jenis_kontrak_id" select="True"/>
                    <field name="master_budget_id" select="True"/>
                    <field name="kanca_id" select="True"/>
                    <field name="kanwil_id" select="True"/>
                    <field name="partner_id" select="True"/>
                    <field name="job_izin_prinsip_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Izin Prinsip" domain="[]" name="group_by_izin_prinsip_id" context="{'group_by':'izin_prinsip_id'}"/>
                        <filter string="Budget Rkap" domain="[]" name="group_by_budget_rkap_id" context="{'group_by':'budget_rkap_id'}"/>
                        <filter string="Stage" domain="[]" name="group_by_stage_id" context="{'group_by':'stage_id'}"/>
                        <filter string="Jenis Kontrak" domain="[]" name="group_by_jenis_kontrak_id" context="{'group_by':'jenis_kontrak_id'}"/>
                        <filter string="Master Budget" domain="[]" name="group_by_master_budget_id" context="{'group_by':'master_budget_id'}"/>
                        <filter string="Kanca" domain="[]" name="group_by_kanca_id" context="{'group_by':'kanca_id'}"/>
                        <filter string="Kanwil" domain="[]" name="group_by_kanwil_id" context="{'group_by':'kanwil_id'}"/>
                        <filter string="Partner" domain="[]" name="group_by_partner_id" context="{'group_by':'partner_id'}"/>
                        <filter string="Job Izin Prinsip" domain="[]" name="group_by_job_izin_prinsip_id" context="{'group_by':'job_izin_prinsip_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_kontrak_kanban" model="ir.ui.view" >
            <field name="name">vit_kontrak</field>
            <field name="model">vit.kontrak</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                                <span class="text-muted">End Date</span> <field name="end_date"></field>
                            </div> <!--oe_kanban_details-->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_kontrak_cal" model="ir.ui.view">
            <field name="name">vit_kontrak_cal</field>
            <field name="model">vit.kontrak</field>
            <field name="arch" type="xml">
                <calendar string="Kontrak" date_start="end_date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_kontrak_graph" model="ir.ui.view">
            <field name="name">vit_kontrak</field>
            <field name="model">vit.kontrak</field>
            <field name="arch" type="xml">
                <graph string="Kontrak" type="bar">
                    <field name="izin_prinsip_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_kontrak" model="ir.actions.act_window">
            <field name="name">Kontrak</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.kontrak</field>
            <field name="view_mode">tree,form,kanban,pivot,calendar,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Kontrak
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_kontrak" name="Kontrak" parent="vit_contract_sub_menu" action="action_kontrak" sequence="50"/>
    </data>
</odoo>