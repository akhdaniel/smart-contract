<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_droping_tree" model="ir.ui.view">
            <field name="name">vit_droping_tree</field>
            <field name="model">vit.droping</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Droping">
                    <field name="name" /> <!-- 100-->
                    <field name="jumlah" /> <!-- 101-->
                    <field name="kanwil_id" /> <!-- 101-->
                    <field name="date" /> <!-- 102-->
                    <field name="stage_id" /> <!-- 102-->
                    <field name="master_budget_id" /> <!-- 103-->
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_droping_pivot" model="ir.ui.view">
            <field name="name">vit_droping_tree</field>
            <field name="model">vit.droping</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Droping">
                    <field name="kanwil_id" type="row"/>
                    <field name="stage_id" type="row"/>
                    <field name="master_budget_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_droping_form" model="ir.ui.view">
            <field name="name">vit_droping_form</field>
            <field name="model">vit.droping</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Droping">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" invisible="allow_confirm==False" class="oe_highlight" icon="fa-check-circle" />
                        <button string="Cancel" type="object" name="action_cancel" invisible="allow_cancel==False" icon="fa-times-circle"/>
                        <field name="stage_id" widget="statusbar" options="{'fold_field':'fold'}" />
                        <button string="Kirim" type="object" name="action_kirim" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Droping Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="stage_is_draft" invisible="True" />
                                <field name="stage_is_done" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="allow_confirm" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="allow_cancel" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="stage_name" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="jumlah"  readonly="stage_is_draft==False"/>
                                <field name="date"  readonly="stage_is_draft==False"/>
                            </group>
                            <group> <!-- right -->
                                <field name="kanwil_id"  readonly="stage_is_draft==False"/>
                                <field name="master_budget_id"  readonly="stage_is_draft==False"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="termin_kontrak_ids" string="Termin Kontrak">
                                <field name="termin_kontrak_ids" readonly="stage_is_draft==False">
                                    <tree >
                                        <field name="name" /> <!-- 100-->
                                        <field name="nilai" /> <!-- 101-->
                                        <field name="master_nama_termin_id" /> <!-- 101-->
                                        <field name="persentase" /> <!-- 102-->
                                        <field name="stage_id" /> <!-- 102-->
                                        <field name="deskripsi" /> <!-- 103-->
                                        <field name="due_date" /> <!-- 104-->
                                        <field name="partner_id" /> <!-- 104-->
                                        <field name="verification_date" /> <!-- 105-->
                                        <field name="kontrak_id" /> <!-- 105-->
                                        <field name="is_droping_done" /> <!-- 106-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_droping_search" model="ir.ui.view">
            <field name="name">vit_droping</field>
            <field name="model">vit.droping</field>
            <field name="arch" type="xml">
                <search string="Droping">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Jumlah" name="filter_by_jumlah" domain="[('jumlah','=','')]" />
                    <filter string="Stage Is Draft" name="filter_by_stage_is_draft" domain="[('stage_is_draft','=','')]" />
                    <filter string="Stage Is Done" name="filter_by_stage_is_done" domain="[('stage_is_done','=','')]" />
                    <filter string="Allow Confirm" name="filter_by_allow_confirm" domain="[('allow_confirm','=','')]" />
                    <filter string="Allow Cancel" name="filter_by_allow_cancel" domain="[('allow_cancel','=','')]" />
                    <filter string="Stage Name" name="filter_by_stage_name" domain="[('stage_name','=','')]" />
                    <filter string="Date" name="filter_by_date" domain="[('date','=','')]" />
                    <field name="name" select="True"/>
                    <field name="jumlah" select="True"/>
                    <field name="stage_is_draft" select="True"/>
                    <field name="stage_is_done" select="True"/>
                    <field name="allow_confirm" select="True"/>
                    <field name="allow_cancel" select="True"/>
                    <field name="stage_name" select="True"/>
                    <field name="date" select="True"/>
                    <field name="kanwil_id" select="True"/>
                    <field name="stage_id" select="True"/>
                    <field name="master_budget_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Kanwil" domain="[]" name="group_by_kanwil_id" context="{'group_by':'kanwil_id'}"/>
                        <filter string="Stage" domain="[]" name="group_by_stage_id" context="{'group_by':'stage_id'}"/>
                        <filter string="Master Budget" domain="[]" name="group_by_master_budget_id" context="{'group_by':'master_budget_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_droping_kanban" model="ir.ui.view" >
            <field name="name">vit_droping</field>
            <field name="model">vit.droping</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                                <span class="text-muted">Date</span> <field name="date"></field>
                            </div> <!--oe_kanban_details-->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <record id="view_vit_droping_cal" model="ir.ui.view">
            <field name="name">vit_droping_cal</field>
            <field name="model">vit.droping</field>
            <field name="arch" type="xml">
                <calendar string="Droping" date_start="date">
                    <field name="name" />
                </calendar>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_droping_graph" model="ir.ui.view">
            <field name="name">vit_droping</field>
            <field name="model">vit.droping</field>
            <field name="arch" type="xml">
                <graph string="Droping" type="bar">
                    <field name="kanwil_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_droping" model="ir.actions.act_window">
            <field name="name">Droping</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.droping</field>
            <field name="view_mode">tree,form,kanban,pivot,calendar,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Droping
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_droping" name="Droping" parent="vit_contract_sub_menu" action="action_droping" sequence="180"/>
    </data>
</odoo>