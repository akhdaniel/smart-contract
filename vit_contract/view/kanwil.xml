<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_kanwil_tree" model="ir.ui.view">
            <field name="name">vit_kanwil_tree</field>
            <field name="model">vit.kanwil</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Kanwil">
                    <field name="name" /> <!-- 100-->
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_kanwil_form" model="ir.ui.view">
            <field name="name">vit_kanwil_form</field>
            <field name="model">vit.kanwil</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Kanwil">
                    <header>
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Kanwil Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                            </group>
                            <group> <!-- right -->
                            </group>
                        </group>
                        <notebook>
                            <page name="kontrak_ids" string="Kontrak">
                                <field name="kontrak_ids" >
                                    <tree >
                                        <field name="name" /> <!-- 100-->
                                        <field name="start_date" /> <!-- 101-->
                                        <field name="end_date" /> <!-- 102-->
                                        <field name="stage_id" /> <!-- 102-->
                                        <field name="amount_izin_prinsip" /> <!-- 103-->
                                        <field name="jenis_kontrak_id" /> <!-- 103-->
                                        <field name="amount_kontrak" /> <!-- 104-->
                                        <field name="master_budget_id" /> <!-- 104-->
                                        <field name="amount_denda" /> <!-- 105-->
                                        <field name="kanca_id" /> <!-- 105-->
                                        <field name="persentasi_denda" /> <!-- 106-->
                                        <field name="partner_id" /> <!-- 107-->
                                    </tree>
                                </field>
                            </page>
                            <page name="droping_ids" string="Droping">
                                <field name="droping_ids" >
                                    <tree >
                                        <field name="name" /> <!-- 100-->
                                        <field name="jumlah" /> <!-- 101-->
                                        <field name="stage_id" /> <!-- 102-->
                                    </tree>
                                </field>
                            </page>
                            <page name="kanca_ids" string="Kanca">
                                <field name="kanca_ids" >
                                    <tree >
                                        <field name="name" /> <!-- 100-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_kanwil_search" model="ir.ui.view">
            <field name="name">vit_kanwil</field>
            <field name="model">vit.kanwil</field>
            <field name="arch" type="xml">
                <search string="Kanwil">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <field name="name" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_kanwil_kanban" model="ir.ui.view" >
            <field name="name">vit_kanwil</field>
            <field name="model">vit.kanwil</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </div> <!--oe_kanban_details-->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- action window -->
        <record id="action_kanwil" model="ir.actions.act_window">
            <field name="name">Kanwil</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.kanwil</field>
            <field name="view_mode">tree,form,kanban,pivot</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Kanwil
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_kanwil" name="Kanwil" parent="vit_contract_config_menu" action="action_kanwil" sequence="40"/>
    </data>
</odoo>