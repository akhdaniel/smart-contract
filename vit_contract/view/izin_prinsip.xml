<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_vit_izin_prinsip_tree" model="ir.ui.view">
            <field name="name">vit_izin_prinsip_tree</field>
            <field name="model">vit.izin_prinsip</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Izin Prinsip">
                    <field name="name" /> <!-- 100-->
                    <field name="budget_id" /> <!-- 100-->
                    <field name="total_pagu" /> <!-- 101-->
                    <field name="stage_id" /> <!-- 101-->
                    <field name="total_payment" /> <!-- 102-->
                    <field name="master_budget_id" /> <!-- 102-->
                    <field name="kanwil_id" /> <!-- 103-->
                </tree>
            </field>
        </record>
        <!-- pivot view -->
        <record id="view_vit_izin_prinsip_pivot" model="ir.ui.view">
            <field name="name">vit_izin_prinsip_tree</field>
            <field name="model">vit.izin_prinsip</field>
            <field name="type">pivot</field>
            <field name="arch" type="xml">
                <pivot string="Izin Prinsip">
                    <field name="budget_id" type="row"/>
                    <field name="stage_id" type="row"/>
                    <field name="master_budget_id" type="row"/>
                    <field name="kanwil_id" type="row"/>
                </pivot>
            </field>
        </record>
        <!-- form view -->
        <record id="view_vit_izin_prinsip_form" model="ir.ui.view">
            <field name="name">vit_izin_prinsip_form</field>
            <field name="model">vit.izin_prinsip</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Izin Prinsip">
                    <header>
                        <button string="Confirm" type="object" name="action_confirm" invisible="allow_confirm==False" class="oe_highlight" icon="fa-check-circle" />
                        <button string="Cancel" type="object" name="action_cancel" invisible="allow_cancel==False" icon="fa-times-circle"/>
                        <field name="stage_id" widget="statusbar" options="{'fold_field':'fold'}" />
                        <button string="Reload" type="object" name="action_reload_view" icon="fa-refresh"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Izin Prinsip Name"/>
                            <h1><field name="name" /></h1>
                        </div>
                        <group>
                            <group> <!-- left -->
                                <field name="stage_is_draft" invisible="True" />
                                <field name="stage_is_done" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="allow_confirm" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="allow_cancel" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="stage_name" invisible="True" readonly="stage_is_draft==False"/>
                                <field name="total_pagu"  readonly="stage_is_draft==False"/>
                                <field name="total_payment"  readonly="stage_is_draft==False"/>
                            </group>
                            <group> <!-- right -->
                                <field name="budget_id"  readonly="stage_is_draft==False"/>
                                <field name="master_budget_id"  readonly="stage_is_draft==False"/>
                                <field name="kanwil_id"  readonly="stage_is_draft==False"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="kontrak_ids" string="Kontrak">
                                <field name="kontrak_ids" readonly="stage_is_draft==False">
                                    <tree >
                                        <field name="name" /> <!-- 100-->
                                        <field name="start_date" /> <!-- 101-->
                                        <field name="end_date" /> <!-- 102-->
                                        <field name="stage_id" /> <!-- 102-->
                                        <field name="amount_izin_prinsip" /> <!-- 103-->
                                        <field name="jenis_kontrak_id" /> <!-- 103-->
                                        <field name="amount_kontrak" /> <!-- 104-->
                                        <field name="master_budget_id" /> <!-- 104-->
                                        <field name="amount_denda" /> <!-- 105-->
                                        <field name="kanca_id" /> <!-- 105-->
                                        <field name="persentasi_denda" /> <!-- 106-->
                                        <field name="overdue_days" /> <!-- 107-->
                                        <field name="partner_id" /> <!-- 107-->
                                        <field name="job_izin_prinsip_id" /> <!-- 108-->
                                    </tree>
                                </field>
                            </page>
                            <page name="job_izin_prinsip_ids" string="Job Izin Prinsip">
                                <field name="job_izin_prinsip_ids" readonly="stage_is_draft==False">
                                    <tree >
                                        <field name="name" /> <!-- 100-->
                                        <field name="total_pagu_job" /> <!-- 101-->
                                        <field name="kanca_id" /> <!-- 102-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_vit_izin_prinsip_search" model="ir.ui.view">
            <field name="name">vit_izin_prinsip</field>
            <field name="model">vit.izin_prinsip</field>
            <field name="arch" type="xml">
                <search string="Izin Prinsip">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Total Pagu" name="filter_by_total_pagu" domain="[('total_pagu','=','')]" />
                    <filter string="Stage Is Draft" name="filter_by_stage_is_draft" domain="[('stage_is_draft','=','')]" />
                    <filter string="Stage Is Done" name="filter_by_stage_is_done" domain="[('stage_is_done','=','')]" />
                    <filter string="Allow Confirm" name="filter_by_allow_confirm" domain="[('allow_confirm','=','')]" />
                    <filter string="Allow Cancel" name="filter_by_allow_cancel" domain="[('allow_cancel','=','')]" />
                    <filter string="Stage Name" name="filter_by_stage_name" domain="[('stage_name','=','')]" />
                    <filter string="Total Payment" name="filter_by_total_payment" domain="[('total_payment','=','')]" />
                    <field name="name" select="True"/>
                    <field name="total_pagu" select="True"/>
                    <field name="stage_is_draft" select="True"/>
                    <field name="stage_is_done" select="True"/>
                    <field name="allow_confirm" select="True"/>
                    <field name="allow_cancel" select="True"/>
                    <field name="stage_name" select="True"/>
                    <field name="total_payment" select="True"/>
                    <field name="budget_id" select="True"/>
                    <field name="stage_id" select="True"/>
                    <field name="master_budget_id" select="True"/>
                    <field name="kanwil_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Budget" domain="[]" name="group_by_budget_id" context="{'group_by':'budget_id'}"/>
                        <filter string="Stage" domain="[]" name="group_by_stage_id" context="{'group_by':'stage_id'}"/>
                        <filter string="Master Budget" domain="[]" name="group_by_master_budget_id" context="{'group_by':'master_budget_id'}"/>
                        <filter string="Kanwil" domain="[]" name="group_by_kanwil_id" context="{'group_by':'kanwil_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image, image_512, image_1920, or image_small in the model -->
        <record id="view_vit_izin_prinsip_kanban" model="ir.ui.view" >
            <field name="name">vit_izin_prinsip</field>
            <field name="model">vit.izin_prinsip</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_details">
                                <h4>
                                    <a type="open"><field name="name"/></a>
                                </h4>
                            </div> <!--oe_kanban_details-->
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- graph -->
        <record id="view_vit_izin_prinsip_graph" model="ir.ui.view">
            <field name="name">vit_izin_prinsip</field>
            <field name="model">vit.izin_prinsip</field>
            <field name="arch" type="xml">
                <graph string="Izin Prinsip" type="bar">
                    <field name="budget_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_izin_prinsip" model="ir.actions.act_window">
            <field name="name">Izin Prinsip</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vit.izin_prinsip</field>
            <field name="view_mode">tree,form,kanban,pivot,graph</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Izin Prinsip
                </p><p>

                </p>
            </field>
        </record>

        <menuitem id="menu_izin_prinsip" name="Izin Prinsip" parent="vit_contract_sub_menu" action="action_izin_prinsip" sequence="20"/>
    </data>
</odoo>