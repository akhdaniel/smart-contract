<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_termin" model="ir.actions.report">
            <field name="name">Termin</field>
            <field name="model">vit.termin</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_contract.vit_termin_report</field>
            <field name="report_file">vit_contract.vit_termin_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_contract.model_vit_termin"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_contract.vit_termin_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Termin: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Nilai</strong>
                            <p class="m-0" t-field="doc.nilai" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Persentase</strong>
                            <p class="m-0" t-field="doc.persentase" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Deskripsi</strong>
                            <p class="m-0" t-field="doc.deskripsi" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Stage Is Draft</strong>
                            <p class="m-0" t-field="doc.stage_is_draft" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Stage Is Done</strong>
                            <p class="m-0" t-field="doc.stage_is_done" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Allow Confirm</strong>
                            <p class="m-0" t-field="doc.allow_confirm" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Allow Cancel</strong>
                            <p class="m-0" t-field="doc.allow_cancel" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Stage Name</strong>
                            <p class="m-0" t-field="doc.stage_name" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Due Date</strong>
                            <p class="m-0" t-field="doc.due_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Verification Date</strong>
                            <p class="m-0" t-field="doc.verification_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Is Droping Done</strong>
                            <p class="m-0" t-field="doc.is_droping_done" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Syarat Progress</strong>
                            <p class="m-0" t-field="doc.syarat_progress" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Actual Progress</strong>
                            <p class="m-0" t-field="doc.actual_progress" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Syarat Output</strong>
                            <p class="m-0" t-field="doc.syarat_output" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Actual Output</strong>
                            <p class="m-0" t-field="doc.actual_output" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Verifikasi Syarat</strong>
                            <p class="m-0" t-field="doc.verifikasi_syarat" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Master Nama Termin</strong>
                            <p class="m-0" t-field="doc.master_nama_termin_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Stage</strong>
                            <p class="m-0" t-field="doc.stage_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Droping</strong>
                            <p class="m-0" t-field="doc.droping_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Partner</strong>
                            <p class="m-0" t-field="doc.partner_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kontrak</strong>
                            <p class="m-0" t-field="doc.kontrak_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Syarat Termin</h2>
                <table class="table table-sm o_main_table" name="syarat_termin_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Verified</td>
                            <td>Due Date</td>
                            <td>Document</td>
                            <td>Document Filename</td>
                            <td>Upload Date</td>
                            <td>Termin</td>
                            <td>Master Syarat Termin</td>
                            <td>Kontrak</td>
                        </tr>
                    </thead>
                    <tbody class="syarat_termin_ids_tbody">
                        <tr t-foreach="doc.syarat_termin_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.verified" /></td>
                            <td><span t-field="line.due_date" /></td>
                            <td><span t-field="line.document" /></td>
                            <td><span t-field="line.document_filename" /></td>
                            <td><span t-field="line.upload_date" /></td>
                            <td><span t-field="line.termin_id" /></td>
                            <td><span t-field="line.master_syarat_termin_id" /></td>
                            <td><span t-field="line.kontrak_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_contract.vit_termin_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_contract.vit_termin_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>