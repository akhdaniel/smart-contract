<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_state_droping" model="ir.actions.report">
            <field name="name">State Droping</field>
            <field name="model">vit.state_droping</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_contract.vit_state_droping_report</field>
            <field name="report_file">vit_contract.vit_state_droping_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_contract.model_vit_state_droping"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_contract.vit_state_droping_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        State Droping: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Sequence</strong>
                            <p class="m-0" t-field="doc.sequence" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Draft</strong>
                            <p class="m-0" t-field="doc.draft" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Done</strong>
                            <p class="m-0" t-field="doc.done" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Open</strong>
                            <p class="m-0" t-field="doc.open" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Fold</strong>
                            <p class="m-0" t-field="doc.fold" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Allow Confirm</strong>
                            <p class="m-0" t-field="doc.allow_confirm" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Allow Cancel</strong>
                            <p class="m-0" t-field="doc.allow_cancel" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Execute Enter</strong>
                            <p class="m-0" t-field="doc.execute_enter" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Confirmation</strong>
                            <p class="m-0" t-field="doc.confirmation" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>On Progress</strong>
                            <p class="m-0" t-field="doc.on_progress" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_contract.vit_state_droping_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_contract.vit_state_droping_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>