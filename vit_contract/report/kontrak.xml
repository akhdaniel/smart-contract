<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_kontrak" model="ir.actions.report">
            <field name="name">Kontrak</field>
            <field name="model">vit.kontrak</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_contract.vit_kontrak_report</field>
            <field name="report_file">vit_contract.vit_kontrak_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_contract.model_vit_kontrak"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_contract.vit_kontrak_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Kontrak: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Start Date</strong>
                            <p class="m-0" t-field="doc.start_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>End Date</strong>
                            <p class="m-0" t-field="doc.end_date" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Stage Is Draft</strong>
                            <p class="m-0" t-field="doc.stage_is_draft" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Stage Is Done</strong>
                            <p class="m-0" t-field="doc.stage_is_done" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Allow Confirm</strong>
                            <p class="m-0" t-field="doc.allow_confirm" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Allow Cancel</strong>
                            <p class="m-0" t-field="doc.allow_cancel" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Stage Name</strong>
                            <p class="m-0" t-field="doc.stage_name" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Amount Izin Prinsip</strong>
                            <p class="m-0" t-field="doc.amount_izin_prinsip" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Amount Kontrak</strong>
                            <p class="m-0" t-field="doc.amount_kontrak" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Amount Denda</strong>
                            <p class="m-0" t-field="doc.amount_denda" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Persentasi Denda</strong>
                            <p class="m-0" t-field="doc.persentasi_denda" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Overdue Days</strong>
                            <p class="m-0" t-field="doc.overdue_days" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Izin Prinsip</strong>
                            <p class="m-0" t-field="doc.izin_prinsip_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Budget Rkap</strong>
                            <p class="m-0" t-field="doc.budget_rkap_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Stage</strong>
                            <p class="m-0" t-field="doc.stage_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jenis Kontrak</strong>
                            <p class="m-0" t-field="doc.jenis_kontrak_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Master Budget</strong>
                            <p class="m-0" t-field="doc.master_budget_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kanca</strong>
                            <p class="m-0" t-field="doc.kanca_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Kanwil</strong>
                            <p class="m-0" t-field="doc.kanwil_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Partner</strong>
                            <p class="m-0" t-field="doc.partner_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Job Izin Prinsip</strong>
                            <p class="m-0" t-field="doc.job_izin_prinsip_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
                <h2>Payment</h2>
                <table class="table table-sm o_main_table" name="payment_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Amount</td>
                            <td>Stage Is Draft</td>
                            <td>Stage Is Done</td>
                            <td>Allow Confirm</td>
                            <td>Allow Cancel</td>
                            <td>Stage Name</td>
                            <td>Request Date</td>
                            <td>Payment Date</td>
                            <td>Amount Denda</td>
                            <td>Amount Budget Rkap</td>
                            <td>Amount Izin Prinsip</td>
                            <td>Amount Kontrak</td>
                            <td>Syarat Progress</td>
                            <td>Actual Progress</td>
                            <td>Partner</td>
                            <td>Budget Rkap</td>
                            <td>Stage</td>
                            <td>Termin</td>
                            <td>Master Budget</td>
                            <td>Kanwil</td>
                            <td>Kontrak</td>
                            <td>Stage</td>
                            <td>Master Nama Termin</td>
                            <td>Izin Prinsip</td>
                        </tr>
                    </thead>
                    <tbody class="payment_ids_tbody">
                        <tr t-foreach="doc.payment_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.amount" /></td>
                            <td><span t-field="line.stage_is_draft" /></td>
                            <td><span t-field="line.stage_is_done" /></td>
                            <td><span t-field="line.allow_confirm" /></td>
                            <td><span t-field="line.allow_cancel" /></td>
                            <td><span t-field="line.stage_name" /></td>
                            <td><span t-field="line.request_date" /></td>
                            <td><span t-field="line.payment_date" /></td>
                            <td><span t-field="line.amount_denda" /></td>
                            <td><span t-field="line.amount_budget_rkap" /></td>
                            <td><span t-field="line.amount_izin_prinsip" /></td>
                            <td><span t-field="line.amount_kontrak" /></td>
                            <td><span t-field="line.syarat_progress" /></td>
                            <td><span t-field="line.actual_progress" /></td>
                            <td><span t-field="line.partner_id" /></td>
                            <td><span t-field="line.budget_rkap_id" /></td>
                            <td><span t-field="line.stage_id" /></td>
                            <td><span t-field="line.termin_id" /></td>
                            <td><span t-field="line.master_budget_id" /></td>
                            <td><span t-field="line.kanwil_id" /></td>
                            <td><span t-field="line.kontrak_id" /></td>
                            <td><span t-field="line.stage_id" /></td>
                            <td><span t-field="line.master_nama_termin_id" /></td>
                            <td><span t-field="line.izin_prinsip_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
                <h2>Termin</h2>
                <table class="table table-sm o_main_table" name="termin_ids_table">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Nilai</td>
                            <td>Persentase</td>
                            <td>Deskripsi</td>
                            <td>Stage Is Draft</td>
                            <td>Stage Is Done</td>
                            <td>Allow Confirm</td>
                            <td>Allow Cancel</td>
                            <td>Stage Name</td>
                            <td>Due Date</td>
                            <td>Verification Date</td>
                            <td>Is Droping Done</td>
                            <td>Syarat Progress</td>
                            <td>Actual Progress</td>
                            <td>Syarat Output</td>
                            <td>Actual Output</td>
                            <td>Master Nama Termin</td>
                            <td>Stage</td>
                            <td>Droping</td>
                            <td>Partner</td>
                            <td>Kontrak</td>
                        </tr>
                    </thead>
                    <tbody class="termin_ids_tbody">
                        <tr t-foreach="doc.termin_ids" t-as="line">
                            <td><span t-field="line.name" /></td>
                            <td><span t-field="line.nilai" /></td>
                            <td><span t-field="line.persentase" /></td>
                            <td><span t-field="line.deskripsi" /></td>
                            <td><span t-field="line.stage_is_draft" /></td>
                            <td><span t-field="line.stage_is_done" /></td>
                            <td><span t-field="line.allow_confirm" /></td>
                            <td><span t-field="line.allow_cancel" /></td>
                            <td><span t-field="line.stage_name" /></td>
                            <td><span t-field="line.due_date" /></td>
                            <td><span t-field="line.verification_date" /></td>
                            <td><span t-field="line.is_droping_done" /></td>
                            <td><span t-field="line.syarat_progress" /></td>
                            <td><span t-field="line.actual_progress" /></td>
                            <td><span t-field="line.syarat_output" /></td>
                            <td><span t-field="line.actual_output" /></td>
                            <td><span t-field="line.master_nama_termin_id" /></td>
                            <td><span t-field="line.stage_id" /></td>
                            <td><span t-field="line.droping_id" /></td>
                            <td><span t-field="line.partner_id" /></td>
                            <td><span t-field="line.kontrak_id" /></td>
                        </tr> <!-- foreach-->
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_contract.vit_kontrak_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_contract.vit_kontrak_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>