<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <record id="action_report_vit_master_budget" model="ir.actions.report">
            <field name="name">Master Budget</field>
            <field name="model">vit.master_budget</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">vit_contract.vit_master_budget_report</field>
            <field name="report_file">vit_contract.vit_master_budget_report</field>
            <field name="print_report_name">object.name</field>
            <field name="binding_model_id" ref="vit_contract.model_vit_master_budget"/>
            <field name="binding_type">report</field>
        </record>
        <!-- document template -->
        <template id="vit_contract.vit_master_budget_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Master Budget: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Jenis Penugasan</strong>
                            <p class="m-0" t-field="doc.jenis_penugasan" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Sequence</strong>
                            <p class="m-0" t-field="doc.sequence" />
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="vit_contract.vit_master_budget_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="vit_contract.vit_master_budget_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>